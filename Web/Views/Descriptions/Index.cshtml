@model IEnumerable<Domain.Description>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Domain.Descriptions</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DescriptionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DescriptionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DescriptionId })
        </td>
    </tr>
}

</table>
